{% block form_row %}
	{%- spaceless -%}
		{%- if compound and not form.vars.block_prefixes[1] == 'field' -%}

			{{- form_widget(form) -}}

		{%- else -%}
			<div class="form-group{{- (form.vars.errors|length > 0) ? ' error': '' -}}">
				{% if 'repeated' in form.vars.block_prefixes %}
					{% if form.vars.block_prefixes[1] == 'checkbox' %}
						<div class="col-lg-offset-2 col-lg-10">
							<div class="checkbox">
								{{- form_errors(form) -}}
								<label for="{{- id -}}" class="">
									{{- form_widget(form) -}}
									{{- label |trans({}, translation_domain) | raw -}}
								</label>
							</div>
						</div>
					{% else %}
						{{- form_label(form) -}}
						<div class="col-lg-10">
							{{- form_errors(form) -}}
							{{- form_widget(form) -}}
						</div>
					{% endif %}
				{% else %}
					{% if form.vars.block_prefixes[2] == 'checkbox' %}
						<div class="col-lg-offset-2 col-lg-10">
							<div class="checkbox">
								{{- form_errors(form) -}}
								<label for="{{- id -}}" class="">
									{{- form_widget(form) -}}
									{{- label |trans({}, translation_domain) | raw -}}
								</label>
							</div>
						</div>
					{% else %}
						{{- form_label(form) -}}
						<div class="col-lg-10">
							{{- form_errors(form) -}}
							{{- form_widget(form) -}}
						</div>
					{% endif %}
				{% endif %}
			</div>
		{%- endif -%}
	{%- endspaceless -%}
{% endblock form_row %}



{% block field_label %}
	{%- spaceless -%}
		{%- set attr = attr|merge({'id': 'label[' ~ id ~ ']', 'class': attr.class|default('') ~ ' col-lg-2 control-label' ~ (required ? ' control-label-required':'')}) -%}
	    <label for="{{- id -}}" class="{{ attr['class'] -}}">
			{%- if required -%}
				<span title="{{- 'form.required' |trans({}, 'CCDNUserProfileBundle') -}}">*</span>
			{%- endif -%}
			{{- label |trans({}, translation_domain) | raw -}}
		</label>
	{%- endspaceless -%}
{% endblock field_label %}



