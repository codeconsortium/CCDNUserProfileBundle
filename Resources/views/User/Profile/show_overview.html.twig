{% extends 'CCDNUserProfileBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_user_profile.profile.show.overview.layout_template %}

{% block title %}{{- 'title.profile.show' | trans({ '%name%': user.getUsername}, 'CCDNUserProfileBundle') |slice(0, ccdn_user_profile.seo.title_length) -}}{% endblock %}


{% block sidebar %}
	{%- spaceless -%}

    {{ parent() }}
	{%- include 'CCDNUserProfileBundle:Common:Layout/Sidebar/profile_sidebar.html.twig' -%}

	{%- endspaceless -%}
{% endblock sidebar %}


{% block body_content %}

	{%- spaceless -%}

	{%- include 'CCDNUserProfileBundle:User:Profile/Partial/item_header.html.twig' -%}

	<div class="row">
		<div class="col-md-6">
			{%- include 'CCDNUserProfileBundle:User:Profile/Partial/panel_info.html.twig' -%}

			{%- include 'CCDNUserProfileBundle:User:Profile/Partial/panel_contact.html.twig' -%}
		</div>

		<div class="col-md-6">
			{%- include 'CCDNUserProfileBundle:User:Profile/Partial/panel_biography.html.twig' -%}

			{%- include 'CCDNUserProfileBundle:User:Profile/Partial/panel_signature.html.twig' -%}
		</div>
	</div>

	{%- endspaceless -%}

{% endblock body_content %}
