{% extends 'CCDNUserProfileBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_user_profile.profile.edit.bio.layout_template %}

{% block javascripts_extra %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdnuserprofile/js/jquery.profile.js') -}}" type="text/javascript"></script>
{% endblock javascripts_extra %}

{% block title %}{{- 'title.profile.edit_bio' | trans({}, 'CCDNUserProfileBundle') |slice(0, ccdn_user_profile.seo.title_length) -}}{% endblock %}

{% block sidebar %}
	{%- spaceless -%}

    {{ parent() }}
	{%- include 'CCDNUserProfileBundle:Common:Layout/Sidebar/profile_sidebar.html.twig' -%}

	{%- endspaceless -%}
{% endblock sidebar %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_user_profile.profile.edit.bio.form_theme -%}
		<form action="{{- path('ccdn_user_profile_bio_edit', {'userId': user.id}) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
			<fieldset>

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<h3>{{- 'title.profile.edit_bio' |trans({}, 'CCDNUserProfileBundle') -}}</h3>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<input type="submit" class="btn btn-primary" id="submit[post]" name="submit[post]" value="{{- 'form.button.save' |trans({}, 'CCDNUserProfileBundle') -}}">

						<a class="btn btn-default" href="{{- path('ccdn_user_profile_show_bio_by_id', {'userId': user.id}) -}}">
							{{- 'form.button.cancel' |trans({}, 'CCDNUserProfileBundle') -}}
						</a>
					</div>
				</div>

			</fieldset>
		</form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
