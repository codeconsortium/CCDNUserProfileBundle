{%- spaceless -%}
	{%- set route = app.request.attributes.get('_route') -%}

	<li class="nav-header">{{- 'ccdn_user_profile.sidebar.header.navigation' | trans({}, 'CCDNUserProfileBundle') -}}</li>
	
	{%- if is_granted("ROLE_USER") -%}	
		{%- if user is not defined -%}
			<li class="active">
				<a href="{{- path('ccdn_user_profile_show') -}}">
					<i class="icon-white icon-user"></i>
					{{- 'ccdn_user_profile.sidebar.link.profile.view' |trans({}, 'CCDNUserProfileBundle') -}}
				</a>
			</li>		
		{%- else -%}
			{%- if app.user.id == user.id -%}
				<li class="active">
					<a href="{{- path('ccdn_user_profile_show') -}}">
						<i class="icon-white icon-user"></i>
						{{- 'ccdn_user_profile.sidebar.link.profile.view' |trans({}, 'CCDNUserProfileBundle') -}}
					</a>
				</li>
			{%- else -%}
				<li>
					<a href="{{- path('ccdn_user_profile_show') -}}">
						<i class="icon-user"></i>
						{{- 'ccdn_user_profile.sidebar.link.profile.view' |trans({}, 'CCDNUserProfileBundle') -}}
					</a>
				</li>
			
				<li class="divider"></li>
				
				<li class="active">
					<a href="{{- path('ccdn_user_profile_show_by_id', {'profileId':profile.id}) -}}">
						<i class="icon-white icon-user"></i>
						{{- 'ccdn_user_profile.sidebar.link.profile.view_named' |trans({'%user_name%': profile.getUsername |title}, 'CCDNUserProfileBundle') |raw -}}
					</a>
				</li>
			{%- endif -%}
		{%- endif -%}
	{%- endif -%}
	
{%- endspaceless -%}
