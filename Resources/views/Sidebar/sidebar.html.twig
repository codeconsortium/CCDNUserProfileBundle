{%- spaceless -%}
	{%- set route = app.request.attributes.get('_route') -%}

	<li class="nav-header">{{- 'ccdn_user_profile.sidebar.header.navigation' | trans({}, 'CCDNUserProfileBundle') -}}</li>

	{%- if is_granted("ROLE_USER") -%}	
		{%- if user is defined -%}
			{%- if user.id == app.user.id -%}
				<li class="active">
					<a href="{{- path('ccdn_user_profile_show') -}}"><i class="icon-white icon-user"></i>&nbsp;
						{{- 'ccdn_user_profile.sidebar.link.profile.view' |trans({}, 'CCDNUserProfileBundle') -}}
					</a>
				</li>
			{%- else -%}
				<li class="active">
					<a href="{{- path('ccdn_user_profile_show_by_id', {'userId':user.id}) -}}">
						<i class="icon-white icon-user"></i>&nbsp;
						{{- 'ccdn_user_profile.sidebar.link.profile.view_named' |trans({'%user_name%': user.getUsername}, 'CCDNUserProfileBundle') -}}
					</a>
				</li>
			{%- endif -%}
		{%- endif -%}
	{%- endif -%}
{%- endspaceless -%}