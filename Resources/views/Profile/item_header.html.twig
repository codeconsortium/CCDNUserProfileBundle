{%- spaceless -%}
	
	<div class="row-fluid">
		<div class="span10">
			{{- profile.renderAvatar(150, 150, 'img-polaroid') |raw -}}
		</div>
		
		{%- if is_granted('ROLE_USER') -%}
			{%- if user.id == app.user.id or is_granted('ROLE_ADMIN') -%}
				<div class="span2 pull-right btn-right">
					<a class="btn" href="{{- path('ccdn_user_profile_edit_avatar', {'profileId':profile.id}) -}}">{{- 'ccdn_user_profile.link.profile.edit' |trans({}, 'CCDNUserProfileBundle') -}}</a>
				</div>
			{%- endif -%}
		{%- endif -%}	
	</div>
		
{%- endspaceless -%}
