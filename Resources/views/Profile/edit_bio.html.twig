{% extends 'CCDNUserProfileBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_profile.profile.edit.bio.layout_template %}

{% block javascripts_extra %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdnuserprofile/js/jquery.profile.js') -}}" type="text/javascript"></script>
{% endblock javascripts_extra %}

{% block title %}{{- truncDot('title.profile.edit_bio' | trans({}, 'CCDNUserProfileBundle'), ccdn_user_profile.seo.title_length) -}}{% endblock %}

{% block sub_title %}
	<a href="{{- path('ccdn_user_profile_show_by_id', {'profileId':profile.id}) -}}">{{- profile.getUsernameBDI |raw -}}</a>
{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_user_profile.profile.edit.bio.form_theme -%}
		<form action="{{- path('ccdn_user_profile_edit_bio', {'profileId':profile.id}) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
			<fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'title.profile.edit_bio' |trans({}, 'CCDNUserProfileBundle') -}}</h3>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-actions">
					<input type="submit" name="submit[save]" class="btn btn-primary" value="{{- 'form.button.save' |trans({}, 'CCDNUserProfileBundle') -}}">

					<a class="btn" href="{{- path('ccdn_user_profile_show_bio_by_id', {'profileId':profile.id}) -}}">
						{{- 'form.button.cancel' |trans({}, 'CCDNUserProfileBundle') -}}
					</a>
				</div>

			</fieldset>
		</form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
